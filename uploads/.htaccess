# Security rules for uploads directory
# Deny execution of PHP files
<Files *.php>
    Deny from all
</Files>

# Deny execution of other server-side scripts
<FilesMatch "\.(pl|py|sh|cgi)$">
    Deny from all
</FilesMatch>

# Only allow specific image formats
<FilesMatch "\.(jpg|jpeg|png|webp)$">
    Allow from all
</FilesMatch>

# Deny everything else by default
<FilesMatch "^(?!.*\.(jpg|jpeg|png|webp)$).*$">
    Deny from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Disable server-side includes
Options -Includes

# Prevent access to .htaccess itself
<Files .htaccess>
    Deny from all
</Files>